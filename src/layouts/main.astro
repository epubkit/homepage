---
const { content } = Astro.props;
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <script
      defer
      src="https://randy-umami.zeabur.app/script.js"
      data-website-id="eebc02c9-57a0-42a8-84f9-623495863e40"></script>
    <SEO
      title={content.title}
      description="Best tool to convert web pages to EPUB. Ideal for compiling research, creating personalized reading lists, or archiving websites. "
      openGraph={{
        basic: {
          title: content.title,
          image: "https://epubkit.app/og.png",
          type: content.ogType || "website",
        },
        optional: {
          description: "EpubKit is the best tool to convert web pages to EPUB",
          siteName: content.title,
        },
      }}
      twitter={{
        title: "EpubKit",
        image: "https://epubkit.app/og.png",
        description: "EpubKit is the best tool to convert web pages to EPUB",
      }}
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/fav.ico" />
    <title>{content.title}</title>
    <style>
      html {
        background-color: rgba(0, 0, 0, 0.03);
      }
    </style>
  </head>
  <body>
    <div>
      <slot />
    </div>

    <script></script>
  </body>
</html>
