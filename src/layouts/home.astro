---
import { config } from "../config";
import Main from "../layouts/main.astro";

const { t } = Astro.props as {
	t: any;
};

---

<Main content={{
  title: "EpubKit",
  ogType: "website",
}}>
      <div class="">
      <div class="text-center space-y-6">
        <h2 class="text-4xl md:text-6xl font-black max-w-[700px] inline-block">{t('home.words.slogan')}</h2>
        <h3 class="text-2xl text-base-content/80 font-black">{t('home.words.description')}</h3>
      </div>

      <section class="text-center mt-12">
        <div class="flex flex-col gap-3">
          <div>
            <button class="btn btn-primary rounded-full" type="button" onclick="showDownloadModal()">{t('home.words.download')}</button>
          </div>
          <small>{t('home.words.support_platforms')}</small>
        </div>
      </section>


      <section>
        <div class="mt-12">
          <img src="/images/intro.png" alt="" />
        </div>
      </section>


      <hr class="my-24" />

      <div class="space-y-24">
        {t('home.features', {returnObjects: true}).map((feature, index) => (
          <section>
            <div class="space-y-6">
              <h2 class="text-center text-4xl font-black">{feature.title}</h2>
              <h3 class="text-center text-base-content/80 text-lg font-medium">{feature.description}</h3>
            </div>

            <div class="mt-6">
              <img src={feature.img} alt="" />
            </div>
          </section>
        ))}
      </div>

      <hr class="my-24" />

      <section id="pricing">
        <h2 class="text-3xl text-center font-medium mb-12">{t("home.words.pricing")}</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {t('home.pricing', {returnObjects: true}).map(item => {
            return (
              <div class="border rounded-xl p-6 space-y-3">
                <h3 class="text-xl font-bold">{item.title}</h3>
                <div class="text-4xl font-bold text-base-content/60">
                  {item.originalPrice && <span class="line-through mr-3">{item.originalPrice}</span>}
                  {item.price}
                </div>
                <div class="text-base-content/80">
                  <i>
                    {item.description}
                  </i>
                </div>
                <div>
                  <ul class="list-disc px-6 mt-6 text-base-content/80 space-y-1">
                    {item.features.map(feature => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>

                <div class="pt-6">
                  {item.price === "$0" ? (
                    <>
                      <button class="btn  rounded-full w-full btn-sm" type="button" onclick="showDownloadModal()">{t('home.words.try_it_now')}</button>
                    </>
                  ) : (
                    <a href={item.price === '$12' ? "https://buy.stripe.com/3csbJW6IObiG29WfYZ" : "https://buy.stripe.com/14k6pC9V0gD08ykcMO"} target="_blank" class="btn btn-primary rounded-full w-full btn-sm" type="button" rel="noreferrer">Buy</a>
                  )}
                </div>
              </div>
            )
          })}
        </div>

      </section >

      <hr class="my-24" />

      <section id="faq">
        <h2 class="text-3xl text-center font-medium mb-12">{t('home.words.frequently_asked_questions')}</h2>
        <div class="space-y-3">
          {t('home.qna', {returnObjects: true}).map(item => {
            return (
              <div class="collapse collapse-arrow bg-base-200">
                <input type="radio" name="qna" />
                <div class="collapse-title text-xl font-medium">
                  {item.q}
                </div>
                <div class="collapse-content">
                  {item.a}
                </div>
              </div>
            )
          })}
        </div>

      </section>

    </div >
</Main>